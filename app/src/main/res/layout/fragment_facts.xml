<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherFragment"
    android:background="#77a4d3"
    android:orientation="vertical">

    <!-- REQUIRES MOBILE NETWORK PERMISSION ON GOOGLE MAPS -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facts"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2sp"
            android:text="@string/fact1_birth"
            ></TextView>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        >
        <Button
            android:id="@+id/MarlboroughMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Where I was Born."
            />
        <Button
            android:id="@+id/NorthboroughMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Where I am now."
            />
        <Button
            android:id="@+id/LosAngelesMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Where I would like to be."
            />
        <Button
            android:id="@+id/NewYorkCityMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Where my significant other is."
            />
    </LinearLayout>


